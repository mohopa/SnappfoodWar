<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="ir.mhp.snappfoddwar.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_stormtrooper"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_stormtrooper"
        android:supportsRtl="true"
        android:theme="@style/Theme.StarWarsAppMVVM">
        <activity android:name="ir.mhp.snappfoddwar.presentation.LaunchActivity"
            android:exported="true"
            android:theme="@style/LaunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ir.mhp.snappfoddwar.presentation.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
        </activity>
    </application>

</manifest>